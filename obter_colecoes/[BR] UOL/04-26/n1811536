<section class="module more-articles more-articles-wide">
    <div class="container">
        <div class="module-header">
                <h1 class="module-title">ESPECIAIS</h1>
        </div>
        <div class="module-content">
            <ul class="nav">
                        <li>
                            <a href="/tecnologia/noticia/a-perfeita-maquina-de-manipulacao-1807270" rel="bookmark" itemprop="url">
                                <figure>
                                    <div class="img-wrapper ratio-16-9">
                                        <img src="http://static.publico.pt/files/homepage/img/1x1.png" class="lazy-load" data-src-l="http://imagens.publico.uol.com.br/imagens.aspx/1210605?tp=UH&amp;db=IMAGENS&w=362&h=204&act=cropResize" alt="" itemprop="thumbnailUrl">
